<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Student Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-6">
          <form action="/" method="POST" class="view-form">
            <input type="hidden" class="form-control" id="inid" name="id">
            <label for="name">Name</label>
            <input type="text" id="inname" name="name" placeholder="Enter Your name" class="form-control" autocomplete="off"><br>
            <label for="mobile">Mobile</label>
            <input type="text" id="inmobile" name="mobile" placeholder="Enter Your Mobile" class="form-control" autocomplete="off"><br>
            <input type="submit" value="Insert" class="btn btn-primary d-block" id="insertButton">
            <input type="submit" value="Update" class="btn btn-secondary d-none" id="updateButton">
          </form>
        </div>
      </div>
    </div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
        <table class="table">
          <tr>
            <th>Name</th>
            <th>Mobile</th>
            <th>Action</th>
          </tr>
          <tbody id="tbody">
            <%data.map((val)=>{%>
              <tr id="data-<%=val.id%>">
                <td><%=val.name%></td>
                <td><%=val.mobile%></td>
                <td>
                  <button type="button" class="btn btn-info text-light" id="edit-<%=val.id%>" onclick="editCellData(this.id)">Edit</button>
                  <button class="btn btn-danger"><a href="/delete?id=<%=val.id%>" class="nav-link" id="delete-<%=val.id%>" onclick="deleteCellData(this.id)">Delete</a></button>
                </td>
              </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      let tbody=document.getElementById('tbody')
      let editCellData=(buttonID)=>{
        let parentTrId=document.getElementById(buttonID).parentElement.parentElement.id
        let dataID=parentTrId.replace(/\D/g, '')
        let nameTd=document.getElementById(parentTrId).getElementsByTagName('td')[0].textContent
        let mobileTd=document.getElementById(parentTrId).getElementsByTagName('td')[1].textContent
        document.getElementById('inid').value=dataID
        document.getElementById('inname').value=nameTd
        document.getElementById('inmobile').value=mobileTd
        document.getElementById('updateButton').classList.replace("d-none","d-block")
        document.getElementById('insertButton').classList.replace("d-block","d-none")
      }


    </script>
  </body>
</html>